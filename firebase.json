{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [
    {
      "site": "urjala-turnaus",
      "public": "dist/turnauspojot",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "site": "urjala-turnaus-admin",
      "public": "dist/turnauspojot-admin",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
